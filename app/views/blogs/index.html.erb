<p id="notice"><%= notice %></p>

<h1>Blogs</h1>
<div>
<%= search_form_for @q do |f| %>


  <%= f.label "Find post:" %>
  <%= f.search_field :title_or_body_cont %>


  <%= f.submit %>
<% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Posted at</th>
      <th>Min read</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= image_tag blog.picture, width: "200px" if blog.picture.attached? %></td>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= blog.posted_at %></td>
        <td><%= blog.min_read %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%@blogs.each do |blog|%>
<div class="media">

<%= link_to  blog_path(blog.id) do  %>
  <%= image_tag blog.picture, width: "200px", class:"mr-3" %>
  <div class="media-body">
    <h5 class="mt-0"><%= blog.title %></h5>
    <%if blog.category %>
    <h5 class="mt-0"><%= blog.category.category %></h5>
    <%end%>
    

  </div>
  <%end%>
</div>
<%end%>
<br>

<%= link_to 'New Blog', new_blog_path %>
